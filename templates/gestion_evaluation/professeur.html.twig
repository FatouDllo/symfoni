{% extends  'base.html.twig' %}
{% block body %}

    <h1> Notes du Professeur: {{ professeur.nomProfesseur }} {{ professeur.prenomProfesseur }} </h1>

    <div class="row">
        <div class="container d-flex">
            {% for note in professeur.notes %}
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-body">
                        <h4 class="card-title">{{ note.etudiant.nom }} {{ note.etudiant.prenom }}</h4>
                        <h5>Note: {{ note.note }}</h5>
                        {# <h3>Moyenne: {{ professeur.moyenne }}</h3> #}
                        <p>
                            {{ note.commentaire }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
