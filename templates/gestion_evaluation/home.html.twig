{% extends  'base.html.twig' %}
{% block body %}

    <h1> Bienvenue dans ce système d'évaluation !</h1>

    <div class="row">
        <div class="container d-flex">
            {% for professeur in professeurs %}
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-body">
                        <h4 class="card-title">{{ professeur.nomProfesseur }} {{ professeur.prenomProfesseur }}</h4>
                        <h3>Moyenne: {{ professeur.moyenne }}</h3>
                        <a href="{{ path('afficher_professeur', {'id': professeur.id}) }}" class="btn btn-primary">Voir détails</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
