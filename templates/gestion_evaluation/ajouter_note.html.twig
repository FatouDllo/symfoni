{% extends 'base.html.twig' %}

{% block title %}Formulaire d'ajout d'une note{% endblock %}

{% block body %}
    <div class="mt-2">
        {% for message in app.flashes('info') %}
            <span class="text-success">{{ message }}</span>
        {% endfor %}
    </div>

    {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        <div class="form-group">
            {{ form_label(form.etudiant) }}
            {{ form_widget(form.etudiant, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.professeur) }}
            {{ form_widget(form.professeur, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.matiere) }}
            {{ form_widget(form.matiere, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.note) }}
            {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.commentaire) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter" class="btn btn-primary">
        </div>
    {{ form_end(form) }}

{% endblock %}
