{% extends 'base.html.twig' %}

{% block title %}Formulaire d'ajout d'un professeur {% endblock %}

{% block body %}
    <div class="mt-2">
        {% for message in app.flashes('info') %}
            <span class="text-success">{{ message }}</span>
        {% endfor %}
    </div>

    {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        <div class="form-group">
            {{ form_label(form.nomProfesseur) }}
            {{ form_widget(form.nomProfesseur, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prenomProfesseur) }}
            {{ form_widget(form.prenomProfesseur, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter" class="btn btn-primary">
        </div>
    {{ form_end(form) }}

{% endblock %}
